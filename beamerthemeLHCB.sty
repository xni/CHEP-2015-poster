\ProvidesPackage{beamerthemeLHCB}
\RequirePackage{xcolor}
\mode<presentation>

\useoutertheme[footline=authorinstitutetitle]{miniframes}
\usecolortheme{whale}
\usecolortheme{orchid}
\useinnertheme{rectangles}

\definecolor{deepblue}{RGB}{5, 31, 82}
\definecolor{cernaddresscolor}{RGB}{157, 202, 165}

\setbeamercolor{headline}{fg=deepblue,bg=white}
\setbeamercolor{footline}{fg=white,bg=deepblue}
\setbeamerfont{block title}{size={}}

